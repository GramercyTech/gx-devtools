# GxTools Environment Configuration
# Copy this file to .env and customize the values for your project

# Development server configuration
NODE_PORT=3000
CLIENT_PORT=3000

# Logging configuration
NODE_LOG_LEVEL=info
TUNNEL_LOG_LEVEL=error

# Component configuration
COMPONENT_PATH=./src/Plugin.vue

# HTTPS configuration (automatically set by gxto dev command)
USE_HTTPS=true
CERT_PATH=.certs/localhost.pem
KEY_PATH=.certs/localhost-key.pem

# Development features
NODE_DEBUG=false
SOCKET_IO_ENABLED=true

# Tunnel configuration (optional - for advanced users)
# TUNNEL_HOST=http://34.44.125.150/upstream
# ENDPOINT=your-endpoint-id 